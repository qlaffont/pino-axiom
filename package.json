{
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "jest",
    "lint": "eslint src --fix",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "np": "np"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint src"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "name": "pino-axiom",
  "author": "qlaffont",
  "module": "dist/pino-axiom.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/qlaffont/pino-axiom.git"
  },
  "bugs": {
    "url": "https://github.com/qlaffont/pino-axiom/issues",
    "email": "contact@qlaffont.fr"
  },
  "size-limit": [
    {
      "path": "dist/pino-axiom.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/pino-axiom.esm.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "./node_modules/"
    ]
  },
  "devDependencies": {
    "@jest/globals": "29.6.1",
    "@size-limit/preset-small-lib": "8.2.6",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "np": "8.0.4",
    "prettier": "3.0.0",
    "size-limit": "8.2.6",
    "ts-jest": "^29.1.0",
    "tsdx": "0.14.1",
    "tslib": "2.6.1",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "@axiomhq/axiom-node": "^0.12.0",
    "@types/node": "^18.14.6",
    "pino": "^8.10.0",
    "pino-abstract-transport": "^1.0.0"
  }
}
